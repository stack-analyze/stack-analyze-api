{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-var": "error",
        "eqeqeq": "warn",
        "eol-last": "error",
        "spaced-comment": "error",
        "comma-spacing": "error",
        "block-spacing": "error",
        "prefer-const": "error",
        "semi": "error",
        "valid-jsdoc": "error",
        "indent": ["error", 2]
    }
}
